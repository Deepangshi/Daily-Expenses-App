@model Expense_Tracker.Models.Category

@{
    ViewData["PageTitle"] = "Create New Category";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <input type="radio" class="btn-check" name="Type" id="option1" autocomplete="off" value="Expense" checked="@(Model.Type=="Expense")">
                <label class="btn btn-secondary" for="option1">Expense</label>

                <input type="radio" class="btn-check" name="Type" id="option2" autocomplete="off" value="Income" checked="@(Model.Type == "Income")">
                <label class="btn btn-secondary" for="option2">Income</label>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @* <ejs-textbox id="title" placeholder="Title" ejs-for="Title" floatLabelType="Always"></ejs-textbox> *@
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                @* <input type="submit" value="Create" class="btn btn-primary" /> *@
                <button type="submit" value="Create" class="btn btn-primary btn-lg">Create</button>
            </div>
        </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
